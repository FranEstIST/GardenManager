<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GardenManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vibrant_plant_green</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.GardenManagerPopUp" parent="Theme.GardenManager">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@drawable/pop_up_bg_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GardenManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">@android:color/black</item>
        <!--<item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="hintTextAppearance">@color/black</item>
        <item name="hintTextColor">@color/black</item>-->
        <!--<item name="android:actionBarWidgetTheme">@style/Theme.GardenManager.ActionBarWidget</item>-->
    </style>

    <style name="Theme.GardenManager.ActionBarWidget">
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Theme.GardenManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.GardenManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GardenManager.Swipeable" parent="Theme.GardenManager">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/vibrant_plant_green</item>
        <item name="android:statusBarColor">@color/vibrant_plant_green</item>
    </style>
</resources>